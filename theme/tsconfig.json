{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "baseUrl": ".",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "build",
    ".cromwell"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}